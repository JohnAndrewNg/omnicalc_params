<h1>Payment Calculator</h1>

<form action="/payment/results">
  <div>
    <label for="users_apr">
      APR
    </label>
    <input id="users_apr" type="text" name="apr" placeholder="E.g. 5.42">
  </div>
  <div>
    <label for="users_years">
      Number of years
    </label>
    <input id="users_years" type="text" name="years" placeholder="How many years to repay?">
  </div>
  <div>
    <label for="users_principal">
      Principal
    </label>
    <input id="users_principal" type="text" name="principal" placeholder="How much principal?">
  </div>

  <button>Calculate monthly payment</button>

</form>
